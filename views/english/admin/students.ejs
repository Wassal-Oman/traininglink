<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Head Partial -->
  <%- include('../partials/head'); %>
  
  <title>Training Link | Students</title>

  <!-- Custom Style -->
  <style>
    .dropdown-toggle::after {
        display: none;
    }
  </style>
</head>

<body>
  <div class="wrapper ">
    <!-- Sidebar Partial -->
    <%- include('../partials/sidebar'); %>

    <div class="main-panel">
      <!-- Nav Partial -->
      <%- include('../partials/nav', { user }); %>
      
      <!-- Content -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">List of Students</h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table" id="table">
                      <thead class="text-primary">
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Registration Method</th>
                        <th>Manage</th>
                      </thead>
                      <tbody>
                        <% if(data.length > 0) {%>
                        <% data.forEach(d => {%>
                          <tr>
                            <td><%= d.name %></td>
                            <td><%= d.email %></td>
                            <td><%= d.user_phone %></td>
                            <td><%= d.authentication_type %></td>
                            <td>
                              <div class="dropdown show">
                                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  <i class="material-icons">settings</i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                  <a class="dropdown-item" href="en/students/<%= d.email %>/delete" onclick="confirm('Are you sure to delete this student?')">Delete</a>
                                  <a class="dropdown-item" href="en/students/<%= d.email %>/edit" onclick="confirm('Are you sure to edit this student?')">Edit</a>
                                </div>
                              </div>
                            </td>
                          </tr>
                        <% });} else { %>
                          <td class="text-center" colspan="5">No Data Available</td>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Foorter Partial -->
      <%- include('../partials/footer'); %>
    </div>
  </div>

  <!-- JS Scripts Partial -->
  <%- include('../partials/scripts'); %>

  <!-- Custom JS Script -->
  <script>
  $(document).ready(() => {
    $('#table').DataTable({
      "bPaginate": true,
      "bLengthChange": false,
      "bFilter": false,
      "bInfo": false,
      "bAutoWidth": false 
    });
  });
  </script>
</body>
</html>