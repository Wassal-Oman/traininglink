<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Head Partial -->
  <%- include('../partials/head'); %>

  <title>Training Link | Home</title>
</head>

<body>
  <div class="wrapper">

    <!-- Sidebar Partial -->
    <%- include('../partials/sidebar'); %>

    <div class="main-panel">

      <!-- Nav Partial -->
      <%- include('../partials/nav', { user }); %>

      <div class="content">
        <div class="container-fluid">

          <!-- Statistics -->
          <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">school</i>
                  </div>
                  <p class="card-category">Institutes</p>
                  <h3 class="card-title"><%= instCount %></h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">assessment</i> Number of Institutes
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-success card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">business</i>
                  </div>
                  <p class="card-category">Companies</p>
                  <h3 class="card-title"><%= compCount %></h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">assessment</i> Number of Companies
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-danger card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">wc</i>
                  </div>
                  <p class="card-category">Students</p>
                  <h3 class="card-title"><%= studCount %></h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">assessment</i> Number of Students
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-info card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">assignment</i>
                  </div>
                  <p class="card-category">Quotations</p>
                  <h3 class="card-title"><%= quotCount %></h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">assessment</i> Number of Quotations
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Charts -->
          <div class="row">
            <div class="col-lg-6 col-md-12">
              <div class="card">
                <div class="card-header card-header-warning">
                  <h4 class="card-title">Bargraph</h4>
                  <p class="card-category">New employees on 15th September, 2016</p>
                </div>
                <div class="card-body table-responsive">
                  <p>Hello</p>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-12">
              <div class="card">
                <div class="card-header card-header-warning">
                  <h4 class="card-title">Pie Chart</h4>
                  <p class="card-category">New employees on 15th September, 2016</p>
                </div>
                <div class="card-body table-responsive">
                  <p>Hello</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Foorter Partial -->
      <%- include('../partials/footer'); %>

    </div>
  </div>

  <!-- JS Scripts Partial -->
  <%- include('../partials/scripts'); %>
</body>
</html>
