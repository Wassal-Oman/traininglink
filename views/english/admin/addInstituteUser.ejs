<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Head Partial -->
    <%- include('./partials/head'); %>

    <title>Training Link | Add New Institute User</title>

    <!-- Custom Style -->
    <style>
      input[type="number"]::-webkit-inner-spin-button,
      input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
      .card {
        width: 500px;
      }
      .field-icon {
        float: right;
        margin-right: 8px;
        margin-top: -30px;
        position: relative;
        z-index: 2;
        cursor: pointer;
      }
    </style>
  </head>

  <body>
    <div class="wrapper">
      <!-- Sidebar Partial -->
      <%- include('./partials/sidebar'); %>

      <div class="main-panel">
        <!-- Nav Partial -->
        <%- include('./partials/nav', { user }); %>

        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div class="card mx-auto">
                  <div class="card-header card-header-primary">
                    <h4 class="card-title">Add Institute User</h4>
                  </div>
                  <div class="card-body">
                    <%- include('./partials/messages'); %>
                    <form action="/en/admin/institutes/add-user" method="POST">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">User Name</label>
                            <input name="name" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Email Address</label>
                            <input name="email" type="email" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Phone Number</label>
                            <input name="phone" type="number" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="bmd-label-floating">Password</label>
                            <input id="password" name="password" type="password" class="form-control" />
                            <span id="password-field" class="mdi mdi-eye field-icon toggle-password"></span>
                          </div>
                        </div>
                      </div>
                      <input type="hidden" name="institute_id" value="<%= institute_id %>">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <input type="submit" value="Add Institute User" class="btn btn-primary pull-left">
                            <a href="/en/admin/institutes/<%= institute_id %>/show" class="btn btn-primary pull-right">Go Back</a>
                          </div>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Foorter Partial -->
        <%- include('./partials/footer'); %>
      </div>
    </div>

    <!-- JS Scripts Partial -->
    <%- include('./partials/scripts'); %>
    <script>
      $("#password-field").click(() => {
        $("#password-field").toggleClass("mdi-eye mdi-eye-off");
        let input = $("#password");
        if (input.attr("type") == "password") {
          input.attr("type", "text");
        } else {
          input.attr("type", "password");
        }
      });
    </script>
  </body>
</html>
