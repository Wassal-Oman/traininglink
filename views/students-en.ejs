<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Training Link | Students</title>

    <!-- CSS Files -->
    <link rel="stylesheet" href="/vendors/iconfonts/mdi/css/materialdesignicons.min.css"/>
    <link rel="stylesheet" href="/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .vh-100 {
        min-height: 100vh;
      }
    </style>
  </head>

  <body>
    <div class="container-scroller">
      <!-- nav partial -->
      <%- include('partials/nav', {user: user}); %>
      <div class="container-fluid page-body-wrapper">
        <!-- sidebar partial -->
        <%- include('partials/sidebar'); %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title text-primary">Students</h4>
                    <div id="table_wrapper" class="table-responsive">
                      <table id="table" class="table table-bordered">
                        <thead>
                          <tr>
                            <th><strong>Student Name</strong></th>
                            <th><strong>Email Addres</strong></th>
                            <th><strong>Phone Number</strong></th>
                            <th><strong>Manage User</strong></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if(values) { %>
                          <% values.forEach(value => { %>
                          <tr>
                            <td><%= value.name %></td>
                            <td><%= value.email %></td>
                            <td><%= value.user_phone %></td>
                            <td>
                              <div class="dropdown">
                                <a class="btn" style="background-color:transparent;" role="button" id="link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  <i class="mdi mdi-settings text-primary" style="font-size: 1.5rem;"></i>
                                </a>	
                                <div class="dropdown-menu" aria-labelledby="link">
                                  <a class="dropdown-item" href="#">Delete</a>
                                  <a class="dropdown-item" href="#">Update</a>
                                </div>
                              </div>
                            </td>
                          </tr>
                          <% }); } else { %>
                          <tr>
                            <td colspan="4" class="text-center">No Data Available</td>
                          </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- footer partial -->
          <%- include('partials/footer'); %>
        </div>
      </div>
    </div>

    <!-- JS Files -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables.bootstrap4.min.js"></script>
    <script src="/js/dataTables.buttons.min.js"></script>
    <script src="/js/buttons.bootstrap4.min.js"></script>
    <script src="/js/jszip.min.js"></script>
    <script src="/js/pdfmake.min.js"></script>
    <script src="/js/vfs_fonts.js"></script>
    <script src="/js/buttons.html5.min.js"></script>
    <script src="/js/buttons.print.min.js"></script>
    <script src="/js/buttons.colVis.min.js"></script>
    <script src="/js/off-canvas.js"></script>
    <script src="/js/misc.js"></script>
    <script src="/js/dashboard.js"></script>
    <script>
      $(document).ready(function() {
        const table = $('#table').DataTable({
            lengthChange: false,
            buttons: ['excel', 'pdf']
        });
        table.buttons().container().appendTo('#table_wrapper .col-md-6:eq(0)');
      });
    </script>
  </body>
</html>
